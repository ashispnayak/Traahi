<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context="com.invincix.traahi.ProfileActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cf3025"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profiletoolbar"
            android:layout_width="match_parent"
            android:background="@drawable/backround_bottom_sheet"
            android:elevation="4dp"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/profiletoolbartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#fdfdfd"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/profPicLayout"
        >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/profPic"
        android:src="@drawable/defaultimage"
        android:paddingBottom="20dp"
        android:scaleType="center"
        android:background="#E8E8E8"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Profile Pic"
            android:background="@drawable/backround_bottom_sheet"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#fff"
            android:id="@+id/changeProfPic" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/backround_bottom_sheet"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/firstNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:hint="First Name"
                    android:textColorHint="#e8dad9d9"
                    android:inputType="textPersonName"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    />

                <EditText
                    android:id="@+id/lastNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:inputType="textPersonName"
                    android:hint="Last Name"
                    android:textColorHint="#e8dad9d9"
                    android:layout_weight="1"
                    android:textColor="#fff"
                     />
            </LinearLayout>

            <EditText
                android:id="@+id/phoneNumberEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Phone"
                android:textColorHint="#e8dad9d9"
                android:inputType="phone"
                android:textColor="#fff"
                 />
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButton"
        android:textColor="#fff"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_background"
        android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_weight="1"

            android:id="@+id/logoutButton"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:background="@drawable/border_background"
            android:layout_gravity="center"/>
    </LinearLayout>






</LinearLayout>
