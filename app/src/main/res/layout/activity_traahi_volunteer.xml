<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_traahi_volunteer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    tools:context="com.invincix.traahi.TraahiVolunteer"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cf3025"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/volunteertoolbar"
            android:layout_width="match_parent"
            android:background="@drawable/backround_bottom_sheet"
            android:elevation="4dp"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/volunteertoolbartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traahi Sevak"
                android:textColor="#fdfdfd"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            android:orientation="horizontal"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            card_view:cardElevation="6dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="354dp"
                android:background="@drawable/traahi_volunteer"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/volunteerimage"
                    android:src="@drawable/traahi_volunteer"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:alpha=".5"
                    android:id="@+id/vw_blacklayer" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                   >
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/volunteerdescription"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="Being a Traahi Sevak is nothing less than being a hero! Whenever someone will be in trouble you will get a notification with the real time location of the victim where you can go, help and be a hero.\nJoin the Traahi Sevak's Community Today and save the world because A TRAAHI SEVAK TODAY IS A HERO TOMORROW."
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:textColor="#ffffff"

                    />
                </ScrollView>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Nearby Sevaks"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border_background"
                    android:textColor="#ffff"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/nearbyVolunteers"
                    android:padding="10dp"
                    android:layout_marginBottom="30dp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:orientation="horizontal"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        card_view:cardElevation="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traahi Sevak Status"
            android:textAlignment="center"
            android:textColor="#fff"
            android:id="@+id/volunteerStatus"
            android:background="@drawable/backround_bottom_sheet"
            android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are a Sevak"
                android:background="#339900"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/volunteerStatusShow" />

            <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Opt Out from Traahi Sevak"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
           android:background="@drawable/border_background"
                android:id="@+id/volunteerStatusButton"
           android:padding="10dp"
           android:layout_gravity="center"
           android:textColor="#fff"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>



</LinearLayout>
</android.support.v4.widget.NestedScrollView>