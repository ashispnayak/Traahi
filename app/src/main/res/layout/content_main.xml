<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.invincix.traahi.MainActivity"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cf3025"
        android:id="@+id/mainappbar"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/maintoolbar"
            android:layout_width="match_parent"
            android:background="#cf3025"
            android:elevation="4dp"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="L"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#fdfdfd"
                android:id="@+id/logoutButton"
                android:layout_gravity="right"
                />

            <TextView
                android:id="@+id/maintoolbartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traahi"
                android:textColor="#fdfdfd"
                android:textSize="40sp"
                android:layout_gravity="center"
                />



        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-be safe anytime,anywhere"
        android:id="@+id/safeTag"
        android:padding="7dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="#f73103"
        android:textStyle="bold"
        android:layout_below="@+id/mainappbar"
        />
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="250dp"
        android:layout_below="@+id/safeTag"

        />
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/slider"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traahi Items"
                android:id="@+id/horText"
                android:padding="10dp"
                android:textColor="#808080"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none"
                android:id="@+id/buttonscroll">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_user_plus"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/addcontacts"
                            />

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="Add Contacts"
                            android:textColor="#808080"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_volunteer"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/traahiVolunteer"
                            />

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textAlignment="center"
                            android:text="Traahi Volunteer"
                            android:textColor="#808080"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_police"
                            android:paddingTop="10sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/policebutton"
                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="5dp"
                            android:text="Nearby Police"
                            android:textColor="#808080"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_hospital"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/ambubutton"

                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Nearby Hospital"
                            android:paddingTop="5dp"
                            android:textColor="#808080"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_plus"
                            android:paddingTop="10sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/safetybutton"
                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Safety Tips"
                            android:paddingTop="5dp"
                            android:textColor="#808080"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_info"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/rtibutton"
                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="RTI Process"
                            android:paddingTop="5dp"
                            android:textColor="#808080"/>
                    </LinearLayout>







                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            app:tbm_backgroundColor="#f73103"
            app:tbm_menuAnchor="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_share"
                tools:visibility="visible"
                />



            <ImageView
                android:id="@+id/credits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_credits"
                tools:visibility="visible"
                />
            <Space
                android:layout_width="56dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/aboutus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_aboutus"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_options"
                tools:visibility="visible"
                />


        </com.michaldrabik.tapbarmenulib.TapBarMenu>

    </FrameLayout>
</RelativeLayout>