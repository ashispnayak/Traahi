<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bgcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.invincix.khanam.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/button_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_number_4"
        android:backgroundTint="@color/toolbarcolor"
        android:foregroundTint="@color/toolbarcolor"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/button_save"
        android:layout_alignStart="@+id/phone_number_3"
        android:layout_marginBottom="25dp"
        android:textColorLink="?attr/colorBackgroundFloating" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_number_3"
        android:layout_above="@+id/phone_number_4"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/toolbarcolor"
        android:foregroundTint="@color/toolbarcolor"
        android:layout_alignStart="@+id/phone_number_2"
        android:textColorLink="@android:color/white"
        android:textColorHint="?android:attr/textColorPrimaryInverseDisableOnly" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_number_2"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/phone_number_3"
        android:layout_alignStart="@+id/phone_number_1"
        android:textColorLink="@android:color/white"
        android:backgroundTint="@color/toolbarcolor"
        android:foregroundTint="@color/toolbarcolor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_number_1"
        android:layout_above="@+id/phone_number_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:textColorLink="@android:color/white"
        android:backgroundTint="@color/toolbarcolor"
        android:foregroundTint="@color/toolbarcolor"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:text="Enter Your Name?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/getname"
        android:textColor="@color/toolbarcolor"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/phone_number_1"
        android:layout_marginTop="28dp" />

    <TextView
        android:text="Enter 4 Phone Numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/toolbarcolor"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/getnumbers" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:backgroundTint="@color/toolbarcolor"
        android:foregroundTint="@color/toolbarcolor"
        android:ems="10"
        android:id="@+id/edit_name"
        android:layout_marginTop="21dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/getname"
        android:layout_alignEnd="@+id/getname"
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textColorHighlight="@color/colorAccent" />

</RelativeLayout>
