<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.invincix.khanam.MainActivity"
    >
    <com.huxq17.swipecardsview.SwipeCardsView
        android:layout_marginTop="80dp"
        android:id="@+id/SwipecardView"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        app:alphaOffsetStep="20"
        app:scaleOffsetStep="0.08"
        app:yOffsetStep="20dp"
        android:background="#01abff">

    </com.huxq17.swipecardsview.SwipeCardsView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SwipecardView"
        android:orientation="vertical"
        android:background="#a81a59"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traahi Items"
            android:id="@+id/horText"
            android:textColor="#3795e4"
            android:textStyle="bold"
            android:textSize="30dp"
            />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonscroll">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hor_add_contacts"
            android:background="?android:selectableItemBackground"
            android:id="@+id/addcontacts"


            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hor_police_stations"
            android:background="?android:selectableItemBackground"
            android:id="@+id/policebutton"


            />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hor_hospital"
        android:background="?android:selectableItemBackground"
        android:id="@+id/ambubutton"

       />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hor_safety_tips"
        android:background="?android:selectableItemBackground"
        android:id="@+id/safetybutton"
         />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hor_rtiprocess"


            android:background="?android:selectableItemBackground"
            android:id="@+id/rtibutton"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hor_municipality"
            android:background="?android:selectableItemBackground"
            android:id="@+id/municipalitybutton"

            />






</LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">



        <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            app:tbm_backgroundColor="@color/red"
            app:tbm_menuAnchor="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_share"
                tools:visibility="visible"
                />



            <ImageView
                android:id="@+id/credits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_credits"
                tools:visibility="visible"
                />
            <Space
                android:layout_width="56dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/aboutus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_aboutus"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_options"
                tools:visibility="visible"
                />


        </com.michaldrabik.tapbarmenulib.TapBarMenu>

    </FrameLayout>
</RelativeLayout>