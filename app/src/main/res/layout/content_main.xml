<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.invincix.traahi.MainActivity"
    >



        <android.support.v7.widget.Toolbar
            android:id="@+id/maintoolbar"
            android:layout_width="match_parent"
            android:background="@drawable/backround_bottom_sheet"
            android:elevation="0dp"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <TextView
                android:id="@+id/maintoolbartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traahi"
                android:textColor="#fdfdfd"
                android:textSize="40sp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-be safe anytime,anywhere"
                android:id="@+id/safeTag"
                android:paddingBottom="6dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"

                />
            </LinearLayout>


        </android.support.v7.widget.Toolbar>





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_below="@+id/safeTag"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:id="@+id/sliderLayout"
        android:layout_below="@+id/safeTag"
        android:orientation="vertical">


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"


        />
    </LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/sliderLayout"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traahi Items"
                android:id="@+id/horText"
                android:padding="10dp"
                android:textColor="#808080"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none"
                android:id="@+id/buttonscroll">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_user_plus"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/addcontacts"
                            />

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="Add Contacts"
                            android:textColor="#808080"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_volunteer"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/traahiVolunteer"
                            />

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textAlignment="center"
                            android:text="Traahi Volunteer"
                            android:textColor="#808080"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_police"
                            android:paddingTop="10sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/policebutton"
                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="5dp"
                            android:text="Nearby Police"
                            android:textColor="#808080"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_hospital"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/ambubutton"

                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Nearby Hospital"
                            android:paddingTop="5dp"
                            android:textColor="#808080"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_plus"
                            android:paddingTop="10sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/safetybutton"
                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Safety Tips"
                            android:paddingTop="5dp"
                            android:textColor="#808080"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hor_icon_back"
                            android:text="@string/fa_info"
                            android:paddingTop="8sp"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#fdfdfd"
                            android:id="@+id/rtibutton"
                            />
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="RTI Process"
                            android:paddingTop="5dp"
                            android:textColor="#808080"/>
                    </LinearLayout>







                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>