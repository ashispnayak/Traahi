<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:padding="5dp"
    app:cardElevation="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/volunteer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fa_close"
            android:padding="10dp"
            android:textColor="#fdfdfd"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:id="@+id/volCloseButton"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/volCloseButton"
      android:id="@+id/volunteerTitle"
      android:textSize="30sp"
      android:textStyle="bold"
      android:textColor="#fdfdfd"
      android:textAlignment="center"
      android:text="Traahi Volunteer "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volunteerTitle"
            android:layout_margin="5dp"
            android:id="@+id/volunteerDescription"
            android:textSize="25sp"
            android:textColor="#fdfdfd"
            android:text="Being a Traahi Volunteer is nothing less than being a hero! Whenever someone will be in trouble you will get a notification with the real time location of the victim where you can go, help and be a hero.\nJoin the Traahi Volunteer's Community Today and save the world because A TRAAHI VOLUNTEER TODAY IS A HERO TOMORROW."/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volunteerDescription"
            android:layout_margin="10dp"
            android:text="Opt In for Traahi Volunteer"
            android:id="@+id/optInOut"
            android:textColor="#fdfdfd"
            android:background="#339900"/>

</RelativeLayout>
    </android.support.v7.widget.CardView>